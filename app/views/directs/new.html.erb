<div class="form-block">
  <h2>間接登録</h2>

  <% if flash[:alert].present? %>
    <div class="alert alert-danger"><%= flash[:alert] %></div>
  <% end %>

  <% if @direct.errors.any? %>
    <div class="error-messages">
      <h3>以下のエラーがあります:</h3>
      <ul>
        <% @direct.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @direct, local: true do |form| %>
    <div class="form-group">
      <label class="form-label" for="worker_id">バッジID</label>
      <%= form.text_field :worker_id, id: 'worker_id', placeholder: 'IDを入力', class: 'form-input' %>
    </div>

    <div class="form-group">
      <label class="form-label" for="process_code">間接コード</label>
      <%= form.text_field :process_code, id: 'process_code', placeholder: '手動で入力', class: 'form-input' %>
    </div>

    <div>
      <%= form.submit "登録", class: 'form-submit' %>
    </div>
  <% end %>
</div>